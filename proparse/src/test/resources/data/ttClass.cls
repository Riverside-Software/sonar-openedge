CLASS ttClass:
  DEFINE PROTECTED TEMP-TABLE tt1 NO-UNDO
    FIELD ab AS CHAR
    FIELD cd AS INT
    FIELD ef AS DATETIME-TZ
    INDEX idx1 IS PRIMARY UNIQUE ab
    INDEX idx2 cd ef
    INDEX idx3 ab ef.

  DEFINE PROTECTED TEMP-TABLE tt2 NO-UNDO LIKE tt1
    FIELD gh AS CHAR.

  DEFINE PROTECTED BUFFER btt1 FOR tt1.
  DEFINE PROTECTED BUFFER bbtt1 FOR tt1.
  DEFINE PROTECTED BUFFER btt2 FOR tt2.
  DEFINE PROTECTED BUFFER bCust FOR customer.
  DEFINE PROTECTED BUFFER bItem FOR ITEM.
END CLASS.
